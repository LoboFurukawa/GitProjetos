<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicineTime.Medicamento">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

  <ContentPage.Content>

    <StackLayout Padding="20" Spacing="20">

      <Entry x:Name="NomeMedicamento" Placeholder="Nome" TextColor="White"/>

      <Entry x:Name="DataIni" Placeholder="Data de Início" TextColor="White"/>

      <Entry x:Name="DataF" Placeholder="Data de Término" TextColor="White"/>

      <Entry x:Name="Hor" Placeholder="Hora" TextColor="White"/>

      <Entry x:Name="Interval" Placeholder="Intervalor" TextColor="White"/>

      <Entry x:Name="Dosa" Placeholder="Dosagem" TextColor="White"/>

      <Button x:Name="Salvar" Text="Salvar Dados" Clicked="SalvarClicked"/>

      <ListView x:Name="ListaMedicamento" BackgroundColor="White" />

    </StackLayout>
  
  </ContentPage.Content>

</ContentPage>
